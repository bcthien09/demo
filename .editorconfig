# EditorConfig is awesome: http://EditorConfig.org

root = true

[*]
end_of_line = lf
charset = utf-8
trim_trailing_whitespace = true
insert_final_newline = true

[*.{ts,js,coffee,html,less,css,json,tsx,scss,jsx}]
indent_style = tab
indent_size = 4

[*.i18n.json]
indent_style = space
indent_size = 4

[*.md]
trim_trailing_whitespace = false
